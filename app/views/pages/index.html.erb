<h1>Welcome to AngularJS</h1>

<div ng-app="app">
  {{ 1 + 1 }}
  <div ng-controller="stuffCtrl">
    {{ message }}
    <div>
      <input ng-model="message" type="text">
    </div>

    <div id="reviews">
      <h2>AngularJS Reviews</h2>

      <li ng-repeat="review in reviews">{{ review }}</li>

      <h3>Leave a Review of AngularJS</h3>
      <input type="text" ng-model="newReview">
      <button ng-click="addReview(newReview)">Add Review</button>
    </div>
  </div>
</div>



